<Window x:Class="GettingRealWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="16">
        <!-- Rows: 0 Header, 1 Service, 2 Frisør, 3 Dato/Tid, 4 Spacer (*), 5 Navn, 6 Telefon, 7 Bekræft -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 0: Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   FontSize="24"
                   Text="Ammari Cut's bookingsystem" />

        <!-- 1: Service -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,8,0" Text="Service"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,8,0,0" Width="200"
                  x:Name="ServiceComboBox"/>

        <!-- 2: Frisør -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,8,0" Text="Frisør"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,8,0,0" Width="200"
                  x:Name="HairdresserComboBox"/>

        <!-- 3: Dato/Tid  + time slots-->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,8,8,0" Text="Dato/tid"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,8,0,0" Orientation="Horizontal" >
            <DatePicker x:Name="DatoPicker" Width="140"
                   SelectedDateChanged="DatoPicker_SelectedDateChanged"/>
            <ComboBox x:Name="AvailableTimesComboBox" Width="100" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- 5: Navn (binding) -->
        <Label Grid.Row="5" Grid.Column="0" Margin="0,8,8,0"
               Content="{Binding ElementName=NavnInputBox, Path=Text}"
               ContentStringFormat="Navn: {0}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="0,8,0,0" Width="200"
                 x:Name="NavnInputBox"
                 TextChanged="NavnInputBox_TextChanged_1"/>

        <!-- 6: Telefon (binding -->
        <Label Grid.Row="6" Grid.Column="0" Margin="0,8,8,0"
               Content="{Binding ElementName=TelefonInputBox, Path=Text}"
               ContentStringFormat="Telefon: {0}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Margin="0,8,0,0" Width="200"
                 x:Name="TelefonInputBox"/>

        <!-- 7: Bekræft -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Margin="0,12,0,0"
                Content="Bekræft" Width="120" HorizontalAlignment="Right" IsDefault="True"
                x:Name="BekraeftButton"/>
        <TextBox x:Name="TidInputBox" HorizontalContentAlignment="Center" RenderTransformOrigin="0.509,0.589" TextChanged="TidInputBox_TextChanged" Grid.Column="1" Margin="181,10,455,168" Grid.Row="3" Grid.RowSpan="2"/>



    </Grid>
</Window>
