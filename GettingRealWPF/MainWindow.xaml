<Window x:Class="GettingRealWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="16">
        <!-- Rows: 0 Header, 1 Service, 2 Frisør, 3 Dato/Tid, 4 Spacer (*), 5 Navn, 6 Telefon, 7 Bekræft -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 0 Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="24"
                   Text="Ammari Cut's bookingsystem" />
        
        <!-- 1 Service -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" Text="Service"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Width="200" Margin="0,8,0,0"
                  ItemsSource="{Binding Services}" 
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedService}"/>

        <!-- 2 Frisør -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8,8,0" Text="Frisør"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Width="200" Margin="0,8,0,0"
                  ItemsSource="{Binding Hairdressers}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedHairdresser}"/>
        <!-- med ItemSource vil comboboxene automatisk opdatere når noget ændres i ObserveCollection -->

        <!-- 3 Dato/Tid -->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,8,8,0" Text="Dato/tid"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
            <DatePicker Width="140"
                        SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
            <ComboBox Width="80" Margin="8,0,0,0" x:Name="AvailableTimesComboBox"
                      ItemsSource="{Binding AvailableTimes}"
                      SelectedItem="{Binding SelectedTime, Mode=TwoWay}"/>
        </StackPanel>

        
        <!--4 Spacer (*) -->

        
        <!-- 5 Navn -->
        <Label Grid.Row="5" Grid.Column="0" Margin="0,8,8,0"
               Content="Navn"/>
        <TextBox Grid.Row="5" Grid.Column="1" Width="200" Margin="0,8,0,0"
                 Text="{Binding Navn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 6 Telefon -->
        <Label Grid.Row="6" Grid.Column="0" Margin="0,8,8,0"
               Content="Telefon"/>
        <TextBox Grid.Row="6" Grid.Column="1" Width="200" Margin="0,8,0,0"
                 Text="{Binding Telefon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 7 Bekræft -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="120" Margin="0,12,0,0"
                HorizontalAlignment="Right"
                Content="Bekræft"
                
                Command="{Binding ConfirmCommand}"/>
        <!-- Knap er command-bound, andre kontroller er data-bound, comboboxe, datepicker, time combobox, textbox -->
        
    </Grid>
</Window>
